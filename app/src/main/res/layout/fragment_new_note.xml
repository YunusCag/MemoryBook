<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_new_note_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/add_new_note_background">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_new_note"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="36dp"/>
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_close"
            android:background="@null"
            android:tint="@android:color/holo_red_dark"
            android:layout_alignTop="@+id/tvTitle"
            android:layout_alignBottom="@+id/tvTitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/add_note_background"
            android:hint="@string/enter_a_note"
            android:maxLines="1"
            android:padding="10dp" />

        <com.yunuscagliyan.memorybook.ui.MyCustomDatePicker
            android:id="@+id/noteDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:layout_below="@+id/etNote"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="2dp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noteDate"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="@string/btnAdd"
            android:textAllCaps="false" />

    </RelativeLayout>
</ScrollView>
